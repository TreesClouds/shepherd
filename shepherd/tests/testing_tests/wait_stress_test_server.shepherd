READ LCM_TARGETS.SHEPHERD
EMIT SCOREBOARD_HEADER.ALL_INFO TO LCM_TARGETS.SCOREBOARD
RUN c = 0
WHILE c <15
  EMIT SCOREBOARD_HEADER.ALL_INFO TO LCM_TARGETS.SCOREBOARD WITH 'a' = 0
  RUN c += 1
END
RUN c = 0
WHILE c <50
  RUN a = c % 2
  EMIT SCOREBOARD_HEADER.ALL_INFO TO LCM_TARGETS.SCOREBOARD WITH 'a' = a
  RUN c += 1
END
